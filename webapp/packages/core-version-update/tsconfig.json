{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "rootDir": "src",
    "outDir": "dist",
    "tsBuildInfoFile": "dist/tsconfig.tsbuildinfo"
  },
  "references": [
    {
      "path": "..\\core-di"
    },
    {
      "path": "..\\core-localization"
    },
    {
      "path": "..\\core-version"
    }
  ],
  "include": [
    "__custom_mocks__/**/*",
    "src/**/*",
    "src/**/*.json",
    "src/**/*.css",
    "src/**/*.scss"
  ],
  "exclude": [
    "lib/**/*",
    "dist/**/*",
    "**/node_modules"
  ]
}