{
  "compilerOptions": {
    "rootDir": "src",
    "module": "CommonJS",
    "outDir": "dist",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "emitDeclarationOnly": false,
    "skipLibCheck": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules/**/*", "dist/**/*", "tests/**/*"]
}
