{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "rootDir": "src",
    "outDir": "dist",
    "tsBuildInfoFile": "dist/tsconfig.tsbuildinfo"
  },
  "references": [
    {
      "path": "..\\core-di"
    },
    {
      "path": "..\\core-product"
    },
    {
      "path": "..\\core-settings"
    }
  ],
  "include": [
    "src/**/*",
    "src/**/*.json",
    "src/**/*.css",
    "src/**/*.scss"
  ],
  "exclude": [
    "lib/**/*",
    "dist/**/*",
    "**/node_modules",
    "**/*.test.ts",
    "**/*.test.tsx"
  ]
}